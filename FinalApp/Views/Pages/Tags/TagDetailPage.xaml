<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             BackgroundColor="#f2f2f2"
             x:Class="FinalApp.Views.Pages.Tags.TagDetailPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Margin="16,32,16,32">
            
            <Label Text="Name" FontAttributes="Bold"/>
            <Entry Text="{Binding SelectedCategory.DisplayName, Mode=TwoWay}" 
                   x:Name="categoryEntry"
                   Placeholder="Category name" 
                   HorizontalOptions="FillAndExpand"/>
            
            <Label Margin="0,8,0,0" Text="Icon" FontAttributes="Bold"/>
            
            <StackLayout x:Name="categoriesGridContainer"/>
            
            <Button BackgroundColor="{StaticResource ColorAccent}" 
                    VerticalOptions="EndAndExpand"
                    FontAttributes="Bold"
                    Text="Save"
                    Clicked="Handle_Clicked"
                    TextColor="White"/>
            
                
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
