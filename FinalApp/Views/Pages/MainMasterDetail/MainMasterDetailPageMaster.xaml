<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="FinalApp.Views.Pages.MainMasterDetail.MainMasterDetailPageMaster" 
             Padding="0"
             Title="Master"
             Icon="ic_hamburger">
    <StackLayout BackgroundColor="White" Spacing="0" Padding="0" Margin="0">
        <BoxView Color="#0d47a1" HorizontalOptions="FillAndExpand" VerticalOptions="Start" HeightRequest="32"/>
        <ListView x:Name="MenuItemsListView" 
                  SeparatorVisibility="None" 
                  Margin="0"
                  HasUnevenRows="true" 
                  
                  BackgroundColor="White"
                  ItemsSource="{Binding MenuItems}">
            <ListView.Header>
                <StackLayout BackgroundColor="#0d47a1" HorizontalOptions="FillAndExpand" Spacing="0" Padding="0,0,0,16" Margin="0,0,0,4">
                    <Image Source="ic_drawer_user"
                           Margin="8,0,8,0"
                           WidthRequest="70" 
                           HeightRequest="70"
                           Aspect="AspectFit" 
                           VerticalOptions="Start" 
                           HorizontalOptions="Start"/>
                    <Label Margin="16,0,16,0" Text="Marco Developer" TextColor="White" FontAttributes="Bold"/>
                    <Label Margin="16,0,16,0" Text="marcosaia1812@gmail.com" FontSize="Small" TextColor="White" />
                </StackLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Spacing="4" Margin="0,4,0,0">
                            <StackLayout Padding="16,10" HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                <Image WidthRequest="32" HeightRequest="32" Source="{Binding Icon}" Margin="0,0,16,0"/>
                                <Label VerticalOptions="FillAndExpand" 
                                       VerticalTextAlignment="Center" 
                                       TextColor="Black" 
                                       Text="{Binding Title}" 
                                       FontSize="Medium" />
                            </StackLayout>
                            <BoxView HorizontalOptions="FillAndExpand" 
                                     HeightRequest="1" 
                                     BackgroundColor="#e2e2e2" 
                                     VerticalOptions="Start"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
            <ListView.Footer>
                <StackLayout Padding="16,32" Margin="0,16,0,16" HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                    <Label VerticalOptions="FillAndExpand" 
                           VerticalTextAlignment="Center" 
                           TextColor="Red" 
                           Text="Sign Out" 
                           FontSize="Medium" />
                </StackLayout> 
            </ListView.Footer>
        </ListView>
    </StackLayout>
</ContentPage>
